{% extends 'base.html.twig' %}

{% block body %}
<div>

	{% for user in users %}      
		 <img class="profile-pic" src="{{ path('download_document', {'document' : user.getPicture().getId()}) }}"> 
		<br>
		{{ user.getCreateDate()| date('Y-m-d H:i:s') }}
		<br>
		{{ user.getUsername() }} 
		<br>
		{{ user.getEmail() }}    
		<br>
		{{ user.getAbout() }} 
		<br>
		{{ user.getAddress() }} 
		<br>


		{% endfor %}
			{% for post in posts %}      
	            <div class = "post-container">
            {% if post.getPicture() is not empty %}
                <td><img src="{{ path('download_document', {'document' : post.getPicture().getId()}) }}"></td>
            {% else %}
                <td></td>
            {% endif %}
			<br>
			{{ post.getCreationDate()| date('Y-m-d H:i:s') }}
			<br>
			{{ post.getTitle() }} 
			<br>
			{{ post.getCategory() }}    
			<br>
			{{ post.getText() }} 
			<br>

	
		{% endfor %}
		

	</div>

	<div class="margin_right"></div>
{% endblock %}











